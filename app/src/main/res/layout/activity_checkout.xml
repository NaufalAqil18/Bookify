<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <!-- Main Content Area -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:orientation="vertical"
        android:background="@drawable/login_background">

        <!-- Header Section with Curved Bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/header_gradient"
            android:gravity="center"
            android:layout_marginHorizontal="-16dp"
            android:layout_marginTop="-16dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Delivering Address Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivering Address"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <!-- Address Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/book_item_background"
                android:padding="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="4dp"
                    android:text="No.23, James Street, New\nTown, North Province"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp"
                    android:text="Change"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Add New Delivery Address Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Add a New Delivery Address"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@drawable/outlined_button_background"
                android:layout_marginBottom="20dp"
                style="?android:attr/borderlessButtonStyle" />

            <!-- Pay Option -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/outlined_button_background"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pay Option"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_dropdown_arrow"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Pay Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Pay $60.00"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@null"
            android:background="@drawable/book_item_background"
            android:layout_margin="20dp"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>

    <!-- Bottom Navigation -->


</RelativeLayout>